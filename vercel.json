{
    "version": 2,
    "routes": [
      {
        "src": "^/api/(.*)",
        "dest": "api/main.py" 
      }
    ],
    "builds": [
      {
        "src": "api/main.py",
        "use": "@now/python"
      },
      {
        "src": "nuxt.config.ts",
        "use": "@nuxtjs/vercel-builder",
        "config": {
          "serverFiles": ["api/**"]
        }
      }
    ]
  }